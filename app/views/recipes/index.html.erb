<%= render 'shared/page_title', title: "All Recipes" %>

<% @recipes.each do |recipe| %>
 
 
 <div class="row">
           <hr/>

     <div class="col-md-2">
       <section class="chef_info center"> <%=gravatar_for recipe.chef, size:100 %>
       <h5> Chefname: <%= recipe.chef.chefname %></h5>
       
       </section>
     </div>
   
     <div class="col-lg-8 well">
       
        <h4> <%= link_to recipe.name, recipe_path(recipe) %></h4> 
        
        <p> <%= recipe.summary %></p>
        
        <p>
          <span class='quiet'><small> <%= time_ago_in_words(recipe.created_at) %>   </small>  </span>
        </p>
        
        <div class="col-md-4">
          
                    <%= image_tag(recipe.picture.url, size: "250x150", class: "gravatar") if recipe.picture? %>

        </div>
        
        
     </div>
    
   
   
 </div> <!-- end of row div -->

<% end %>